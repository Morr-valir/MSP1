{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <main>
        <!--Hero section-->
        <section class="hero is-link">
            <div class="hero-body">
                <div class="container has-text-centered">
                    <p class="title is-size-4">Votre panier</p>
                </div>
            </div>
        </section>
        <div class="container">
            <div class="columns mt-5">
                <div class="column is-full">
                    <table class="table"style="width: 100%;">
                    <thead>
                        <tr>
                        <th>Nom du produit</th>
                        <th>Prix du produit</th>
                        <th>Quantité du produit</th>
                        <th>Options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td colspan ="3"><b>Total :</b></td>
                            <td><b>{{ prixTotal }} €</b></td>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for panier in panierContent %}
                        <tr>
                            <td>{{ panier.produit.name }}</td>
                            <td>{{ panier.produit.prix }}</td>
                            <td>{{ panier.quantite }}</td>
                            <td class="is-flex is-justify-content-center">
                                <a href="{{ path('app_panierSupp',{'id':panier.produit.id}) }}">
                                    <span class="icon has-text-link">
                                        <i class="fa-solid fa-ban"style="color: red;"></i>
                                    </span>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}

                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
