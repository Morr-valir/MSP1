{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <main>
        <section class="container">
        <h1 class="title">Register</h1>
        {{ form_start(registrationForm) }}
            <div class="field">
                <label class="label">Votre Pseudo</label>
                <div class="control">
                    {{ form_row(registrationForm.pseudo, {'attr': {'class': 'input'}}) }}
                </div>
                <p class="help is-danger">{{ form_errors(registrationForm.pseudo) }}</p>
            </div>
            <div class="field">
                <label class="label">Votre adresse mail</label>
                <div class="control">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'input'}}) }}
                </div>
                <p class="help is-danger">{{ form_errors(registrationForm.email) }}</p>
            </div>
            <div class="field">
                <label class="label">Votre mot de passe</label>
                <div class="control">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'input'}}) }}
                </div>
                <p class="help is-danger">{{ form_errors(registrationForm.plainPassword) }}</p>
            </div>
            <div class="field">
            <label class="label">RÃ´le</label>
            <div class="control">
                    {{ form_row(registrationForm.roles,{'attr': {'class': 'select'}}) }}
            </div>
            </div>
            <div class="field">
                <div class="control">
                    <label class="checkbox">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </label>
                </div>
            </div>
            
            <button type="submit" class="button">S'inscrire</button>
        {{ form_end(registrationForm) }}
        </section>
    </main>
{% endblock %}
