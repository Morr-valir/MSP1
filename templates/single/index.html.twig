{% extends 'base.html.twig' %}

{% block title %}Page produit{% endblock %}

{% block body %}
        <!--Hero section-->
        <section class="hero is-link">
            <div class="hero-body">
                <div class="container has-text-centered">
                    <p class="title is-size-4"> Description produit</p>
                </div>
            </div>
        </section>
        <!-- Section Gallery & Info product-->
        <section class="section">
            <div class="container">
                <div class="columns">
                    <div class="column">
                        <figure class="image is-3by2">
                            <img src="/Assets/Medias/{{ produit.image }}">
                        </figure>
                    </div>
                    <div class="column">
                        <h1 class="title is-size-4">{{ produit.name }}</h1>
                        <hr>
                        <div class="content">
                            <p><b>Provenance : </b>{{ produit.description | raw}}</p>
                            <p><b>Producteur : </b>{{ produit.producteur }}</p>
                            <p><b>Prix : {{ produit.prix }} € le Kg</b></p>
                            <div class="buttons">
                                <a href="{{ path('app_panierAdd',{'id':produit.id}) }}" class="button">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Section List product-->
        <section class="section">
            <div class="container">
                <h2 class="title is-size-5">produits similaires</h2>
                <hr>
                <div class="columns">
                  {% for produit in similiProduct %}
                      <div class="column">
                          <div class="card">
                              <div class="card-image">
                                <figure class="image is-4by3">
                                  <img src="/Assets/Medias/{{ produit.image }}" alt="Placeholder image">
                                </figure>
                              </div>
                              <div class="card-content">
                                <div class="media">
                                  <div class="media-content">
                                    <p class="title is-4">{{ produit.name }}</p>
                                  </div>
                                </div>
                                <div class="content">
                                  <b>Provenance : </b>
                                    {{ produit.description }}
                                  <br>
                                  <b>Prix : {{ produit.prix }}€ Le Kg</b>
                                </div>
                                <div class="buttons has-addons is-right">
                                  <a href="single.html" class="button">Acheter</a>
                                </div>
                              </div>
                          </div>
                      </div>
                  {% endfor %}
                </div>
            </div>
        </section>
{% endblock %}
